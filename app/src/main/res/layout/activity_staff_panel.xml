<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StaffPanel">

    <TextView
        android:id="@+id/staff_panel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:paddingVertical="30dp"
        android:paddingHorizontal="25dp"
        android:fontFamily="@font/eagle_lake"
        android:gravity="center"
        android:isScrollContainer="false"
        android:text="@string/professor_dashboard"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:background="@color/purple_700"
        />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staff_panel_title"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:clickable="false"
        android:fontFamily="@font/eagle_lake"
        android:isScrollContainer="false"
        android:text="@string/professor_dashboard"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/branch_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_id"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:clickable="false"
        android:fontFamily="@font/eagle_lake"
        android:isScrollContainer="false"
        android:text="@string/professor_dashboard"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/branch_id"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="takeSubject">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:drawableStart="@drawable/ic_subject"
                    android:drawableLeft="@drawable/ic_subject"
                    android:fontFamily="@font/eagle_lake"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/tack_subject"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:drawableStart="@drawable/ic_list"
                    android:drawableLeft="@drawable/ic_list"
                    android:fontFamily="@font/eagle_lake"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/manage_student"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:drawableStart="@drawable/ic_attend"
                    android:drawableLeft="@drawable/ic_attend"
                    android:fontFamily="@font/eagle_lake"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/manage_attendance"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="changePassword">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:drawableStart="@drawable/ic_change_password"
                    android:drawableLeft="@drawable/ic_change_password"
                    android:fontFamily="@font/eagle_lake"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/change_password"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#FFC5C5"
                android:onClick="logOut">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/amarante"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="@string/logout"
                    android:textColor="#950000"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>